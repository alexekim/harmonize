  <div class="row">
    <div style="background-color: rgba(83, 74, 224, 0.3);" class="col-sm-3">
      <h3>{{name}}</h3>
      <h3>{{location}}</h3>
      <h5>Aspirations:</h5>
      <p>
        {{aspirations}}
      </p>
      <h5>Links:</h5>
